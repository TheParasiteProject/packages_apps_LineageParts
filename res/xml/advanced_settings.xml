<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:lineage="http://schemas.android.com/apk/res-auto"
        android:key="advanced_settings"
        android:title="@string/advanced_settings_title">

    <PreferenceCategory
        android:key="advanced_backup_key"
        android:title="@string/advanced_backup_title">

        <lineageos.preference.SystemPropertySwitchPreference
            android:key="persist.sys.pixelprops.gphotos"
            android:title="@string/unlimited_photos_storage_title"
            android:summary="@string/unlimited_photos_storage_summary"
            android:defaultValue="false"
            android:order="400"/>
    </PreferenceCategory>

    <PreferenceCategory
        android:key="advanced_system_key"
        android:title="@string/advanced_system_title">

        <lineageos.preference.SystemPropertySwitchPreference
            android:key="persist.sys.boot.theme.monet"
            android:title="@string/monet_boot_animation_title"
            android:summary="@string/monet_boot_animation_summary"
            android:defaultValue="false"
            android:order="400"/>
    </PreferenceCategory>
</PreferenceScreen>
